<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-4">
    <%= render "card", restaurants : restaurant %>
    </div>
  </div>
</div>

<table class ="table">
  <thead class="thead-inverse">
    <tr>
      <th scope="row">Name</th>
      <th scope="row">Address</th>
      <th scope="row">phone number</th>
      <th scope="row">Category</th>
      <th scope="row">Review</th>
      <th colspan="3" scope="row"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.phone_number %></td>
      <td><%= restaurant.category %></td>
      <td><%= restaurant.review %></td>
      <td><%= link_to 'Show', restaurant %></td>
      <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
      <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Add review', new_restaurant_review_path(restaurant) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, {class: "btn btn-primaryh "} %>
